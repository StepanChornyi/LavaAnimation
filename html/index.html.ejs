<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">

  <title>Lava Animation</title>
  <meta name="author" content="~">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="initial-scale=1 maximum-scale=1 user-scalable=0" />

  <meta property="og:image" content="preview.png" />
  <meta property="si" content="preview.png" />

  <style>
    body,
    html {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      margin: auto;
      overflow: hidden;
      background-color: black;
    }

    body {
      background-color: black;
    }

    #container {
      width: 100%;
      height: 100%;
      margin: 0;
      /* display:  none; */
      padding: 0;
      touch-action: none;
      user-select: none;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      cursor: auto;
      position: absolute;
      display: none;/*tmp*/
    }

    #canvasBlob {
      position: absolute;
      filter: blur(1px);
      width: 100%;
      height: 100%;
      image-rendering: pixelated;
      /*tmp*/
    }

    #blobContainer {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    #gradient {
      position: absolute;
      width: 100%;
      height: 100%;
      background: linear-gradient(360deg, #e333858a, #c01af059);
    }

    #glow {
      position: absolute;
      width: 100%;
      height: 100%;
      color: #aa0128;
    }
  </style>

</head>

<body style="color: black;">
  <div id="blobContainer">
    <!-- <div id="gradient"></div> -->
    <canvas id="canvasBlob"></canvas>
  </div>

  <div id="container"></div>
</body>

</html>